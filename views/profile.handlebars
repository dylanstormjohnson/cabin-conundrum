<div class='login-container'>
  <div class='container col-md-6'>

    <input hidden type='text' id='user_id' id_value='{{id}}' />

    <form id='update-username-form'>
      <h2>Update Username: {{username}}</h2>
      <div class='form-group'>
        <input
          value='{{username}}'
          class='form-control'
          type='text'
          id='username-update'
        />
      </div>
      <div class='form-group'>
        <button class='main-btn' type='submit'>Update Username</button>
      </div>
    </form>

    <form id='update-password-form'>
      <h2>Update Password:</h2>
      <div class='form-group'>
        <label for='password-update'>New Password:</label>
        <input class='form-control' type='password' id='password-update' />
      </div>
      <div class='form-group'>
        <label for='confirm-password-update'>Confirm Password:</label>
        <input
          class='form-control'
          type='password'
          id='confirm-password-update'
        />
      </div>
      <div class='form-group'>
        <button class='main-btn' type='submit'>Update Password</button>
      </div>
    </form>
  </div>
</div>

<script type='module' src='/js/profile.js'></script>