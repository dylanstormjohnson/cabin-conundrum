<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Cabin Conundrum</title>
    <link
      rel='shortcut icon'
      href='/images/Logo/Cabin_Conundrum_Logo.png'
      type='image/x-icon'
    />
    <link
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <div class=''>
      {{#if showLogin}}{{else}}
        <header class=''>
          <h1>
            {{#if logged_in}}
              <a href='/home'>
                <img
                  alt='logo'
                  id='logo'
                  src='/images/Logo/Cabin_Conundrum_Logo.png'
                />
              </a>
            {{else}}
              <a href='/'>
                <img
                  alt='logo'
                  id='logo'
                  src='/images/Logo/Cabin_Conundrum_Logo.png'
                />
              </a>
            {{/if}}
          </h1>
          <nav>
            <!-- Conditionally render login or logout links -->
            {{#if logged_in}}
              <a href='/home'>Home</a>
              <a href='/highscores'>Highscores</a>
              <a href='/profile'>Profile</a>
              <button class='main-btn' class='' id='logout'>Logout</button>
            {{else}}
              <a class='main-btn' href='/login'>Login or Sign-up</a>
            {{/if}}
          </nav>
        </header>
      {{/if}}
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer></footer>
    </div>

    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'
    ></script>
  </body>
</html>