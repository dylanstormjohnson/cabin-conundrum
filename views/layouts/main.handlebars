<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Cabin Conundrum</title>
    <link
      rel='shortcut icon'
      href='/images/Logo/Cabin_Conundrum_Logo.png'
      type='image/x-icon'
    />
    <link
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'
    />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&display=swap'
      rel='stylesheet'
    />
    <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'
    ></script>
    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js'
      integrity='sha512-z4OUqw38qNLpn1libAN9BsoDx6nbNFio5lA6CuTp9NlK83b89hgyCVq+N5FdBJptINztxn1Z3SaKSKUS5UP60Q=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    ></script>
  </head>
  <body>
    <div class=''>

      <header class=''>
        <h1>
          {{#if logged_in}}
            <a href='/game'>
              <img
                alt='logo'
                id='logo'
                src='/images/Logo/Cabin_Conundrum_Logo_Small.png'
              />
            </a>
          {{else}}
            <a href='/'>
              <img
                alt='logo'
                id='logo'
                src='/images/Logo/Cabin_Conundrum_Logo_Small.png'
              />
            </a>
          {{/if}}
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          <a href='/'>Welcome!</a>
          {{#if logged_in}}
            <a href='/game'>Game</a>
            <a href='/highscores'>Highscores</a>
            {{#if username}}
              <a href='/profile'>Profile: {{username}}</a>
            {{else}}
              <a href='/profile'>Profile</a>
            {{/if}}
            <button class='main-btn' class='' id='logout'>Logout</button>
          {{else}}
            <a class='main-btn' href='/login'>Login or Sign-up</a>
          {{/if}}
        </nav>
      </header>

      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer></footer>
    </div>

    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
    {{! <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'
    ></script>
    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js'
      integrity='sha512-z4OUqw38qNLpn1libAN9BsoDx6nbNFio5lA6CuTp9NlK83b89hgyCVq+N5FdBJptINztxn1Z3SaKSKUS5UP60Q=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    ></script> }}
  </body>
</html>