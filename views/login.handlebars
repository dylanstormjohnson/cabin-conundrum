<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-6'>
        <h2>Login</h2>

        <form id='login-form'>
          <div class='form-group'>
            <label for='username-login'>Username:</label>
            <input class='form-control' type='text' id='username-login' />
          </div>
          <div class='form-group'>
            <label for='password-login'>Password:</label>
            <input class='form-control' type='password' id='password-login' />
          </div>
          <div class='form-group'>
            <button class='btn btn-primary' type='submit'>Login</button>
          </div>
        </form>
      </div>
      <div class='col-md-6'>
        <h2>Signup</h2>

        <form id='signup-form'>
          <div class='form-group'>
            <label for='username-signup'>Username:</label>
            <input class='form-control' type='text' id='username-signup' />
          </div>
          <div class='form-group'>
            <label for='password-signup'>Password:</label>
            <input class='form-control' type='password' id='password-signup' />
          </div>
          <div class='form-group'>
            <button class='btn btn-primary' type='submit'>Signup</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src='./js/login.js'></script>